# 8-3 / 8-4. T-Shirt: Function that accepts a size and msg, then print a summary, Use positional and keyword

def make_shirt(size, text):
      print("--- Summary ---")
      summary = ("Size selected is " + size + '.\n')
      summary += ('Text provided is "' + text + '".')
      print(summary + '\n')

#make_shirt("Small", "Error between shoes and keyboard")
#make_shirt(size='xxxMedium', text='Is this on?')


def make_shirt2(size= "Large", text= "I love Python",):
      print("--- Summary ---")
      summary = ("Size selected is " + size + '.\n')
      summary += ('Text provided is "' + text + '".')
      print(summary + '\n')


make_shirt2()
make_shirt2(size= "Medium")
make_shirt2(size= "Small", text= "I also love Python")
