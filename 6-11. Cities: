cities = {
    'los angeles' : {'country' : 'usa', 'population' : '4 million', 'fact' : 'Inhabitants are called Angelenos'},
    'mexico city' : {'country' : 'mexico', 'population' : '8.9 million', 'fact' : 'built on a lake'},
    'tokyo' : {'country' : 'japan', 'population' : '9.2 million', 'fact' : 'great for tax-free shopping'}
}

msg = "Some facts and fun facts about "
# initial response
for city, info in cities.items():
    print("\n" + msg + city.title() + ' are:')
    for details in info:
        print(info[details].capitalize())

